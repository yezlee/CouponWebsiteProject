/*일시 구분 금액*(포인트정보)*/
.po1 {
	display: inline;
	margin-left: 160px;
	color: black;
	font-size: 20px;
}


/*내 정보 수정에서 이름아이디비밀번호핸드폰번호*/

.regi_form{
    padding: 20px;
    background: #f5f5f5;
    border: 2px solid #eee;
}

.regi_form ul {
	padding-left: 10px;
}

.regi_form ul li {
	padding: 5px;
}

.regi_form ul li .label {
	display: inline-block;
	width: 130px;
	height: 30px;
}

/* 회원정보변경 입력란 */

.regi_form ul li .join {
	width: 200px;
	height: 25px;
    border: 1px solid #ddd;
    padding-left: 5px;
}

.regi_form .mypage_update_bth{
	background: #eaeaea;
    color: #333;
    font-size: 14px;
    line-height: 14px;
    padding: 5px 30px;
    width: 135px;
    height: 27px;
    border: 1px solid #ddd;
    margin: 0 3px;
    cursor: pointer;
    margin-left: 5px;
}

.regi_form .step_url1{
	margin-left: 5px;
}


.regi_form input::placeholder{
	color : #ccc;
	font-size : 14px;
	lint-height : 14px;
}



/*내정보수정하기 밑에 div(탈퇴내용,탈퇴버튼*/

#underdiv {
	padding: 25px 15px 10px;
    font-size: 15px;
    color: #999;
}

#underdiv p{
    display: inline-block;	
}

#exit {
	background: #eaeaea;
    color: #333;
    font-size: 14px;
    line-height: 15px;
    padding: 5px 30px;
    width: 135px;
    height: 28px;
    border: 1px solid #ddd;
    margin: 0 3px;
    cursor: pointer;
    margin-left: 20px;
}





