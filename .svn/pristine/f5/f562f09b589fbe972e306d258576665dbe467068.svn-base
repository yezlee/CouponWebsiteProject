@charset "utf-8";
@import url(style.css);

/* 모달한거 */
.modal {
	display: none;
	position: fixed;
	z-index: 1;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
	overflow: auto;
	background-color: rgba(0, 0, 0, 0.5);
	padding-top: 60px;
}


.modal .modal_wrapper{
	 min-width: 600px;
}


.modal .modal-content {
	background-color: #fefefe;
	margin: 5% auto 15% auto;
	width: 450px;
	box-shadow: 0px 0px 20px 10px rgb(0 0 0 / 35%);
	border-radius: 10px;
}


.modal_conts{
	padding: 40px 35px;
	font-size : 17px;
}

.modal_conts .imgcontainer {
	text-align: center;
	position: relative;
}

.modal_conts .imgcontainer .close {
	position: absolute;
	right: -10px;
    top: -27px;
	color: #000;
	font-size: 35px;
	font-weight: bold;
}

.modal_conts .imgcontainer .close:hover, .close:focus {
	color: #ff9900;
	cursor: pointer;
}

/* 로그인할때 중앙 로고 이미지 */
.modal_conts .imgcontainer img.avatar {
	width: 55%;
    padding-top: 5px;
    padding-bottom: 25px;
}

.modal_conts .container_modal p{
	padding-bottom: 5px;
    font-size: 14px;
    font-weight: 500;
}

.modal_conts .container_modal #modalid, #modalpass {
	width: 100%;
	padding: 10px 15px;
	margin: auto;
    margin-bottom: 15px;
	display: block;
	border: 1px solid #ccc;
	box-sizing: border-box;
	font-size: 15px;
}

.modal_conts .container_modal #modalbutton {
    background-color: #ffb400;
    color: #555;
    padding: 7px 20px;
    margin: 10px 0 5px;
    border: none;
    cursor: pointer;
    width: 100%;
    font-size: 16px;
    font-weight: 500;
    border-radius: 20px;
}

.modal_conts .container_modal input::placeholder{
	color: #999; 	
}

.modal_conts .container_modal button:hover {
	background: #ffa500!important;
}

.modal_conts .container_modal #moadlcheck {
    margin: 3px 5px 0 0;
    padding: 0;
}

.modal_conts .container_modal label span{
	font-size: 13px;
	color : #555;
	position: absolute;
}

.modal_conts .container {
    padding: 10px 0;
    font-size: 15px;
    margin-top: 15px;
}

.modal_conts .container a{
	background: #ededed;
    padding: 4px 54px;
    color: #666;
    border: 1px solid #ddd;
}

.modal_conts .container #search_id{
    margin-right: 25px;	
}

.modal_conts .container a span{
	font-size : 13px;	
}




